# LingoBot Configuration Template
# Rename this file to .env and fill in your values
# Do NOT commit the actual .env file to GitHub

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Groq API Configuration (Required for LLM and STT)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT=60

# OpenAI Configuration (Optional - Backup)
OPENAI_API_KEY=sk-proj-your_openai_key_here
OPENAI_MODEL=gpt-4o

# Other Settings
LOG_LEVEL=INFO
SUPPORTED_LANGUAGES=en,hi,kn,te,ta,ml,mr,bn,gu,pa
